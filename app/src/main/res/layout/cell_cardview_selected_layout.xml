<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper_selected"
    android:layout_width="60dp"
    android:layout_height="75dp"
    android:layout_margin="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_selected_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"

                app:civ_border_color="@color/boderColor"
                app:civ_border_width="0.5dp" />

            <ImageButton
                android:id="@+id/btn_deselect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_close_39dp_all" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_selected_name"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center|top"
            android:text="이름"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.v7.widget.CardView>
