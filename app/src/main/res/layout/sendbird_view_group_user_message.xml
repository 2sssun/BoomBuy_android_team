    <LinearLayout
        android:id="@+id/left_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/img_left_thumbnail"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txt_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SenderName"
                    android:textSize="13sp"
                    android:textColor="#927ece"
                    />
                <TextView
                    android:id="@+id/txt_left"
                    android:layout_width="263dp"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:layout_gravity="center_vertical"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard"
                    android:textColor="#3d3d3d"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:paddingBottom="2dp"
                android:text="10:24PM"
                android:textColor="#acaab2"
                android:textSize="10sp"
                />
        </LinearLayout>

    </LinearLayout>

