<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/receivedfrag_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_custom_inner_layout_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gift_received_date"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_weight="0"
                android:text="2017.02.11"
                android:textColor="@color/letterColor"
                android:textSize="16.3sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/gift_using_statement"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_stand_by" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gift_sent_profile"
                    app:civ_border_color="@color/boderColor"
                    app:civ_border_width="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="보낸 사람"
                    android:textColor="@color/letterColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/gift_sent_people"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|top"
                    android:text="이선호, 진지수, 김지민"
                    android:textColor="@color/letterColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/gift_sent_product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/gift_sent_product_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="이브 생로랑 쿠션 엉크로드 뽀"
                android:textColor="@color/letterColor"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/gift_barcode"
                android:layout_width="210dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_barcode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>