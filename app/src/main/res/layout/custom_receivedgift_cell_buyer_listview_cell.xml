<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/received_gift_cell_buyer_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                app:civ_border_color="@color/boderColor"
                app:civ_border_width="0.5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/received_gift_cell_sendName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center|left"
            android:text="이름"
            android:textColor="@color/letterColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/received_gift_cell_sendPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center|right"
            android:paddingRight="13dp"
            android:text="가격"
            android:textColor="@color/letterColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/received_gift_cell_sendPayBtn"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="-3dp"
                android:layout_weight="0"
                android:background="@drawable/ic_progress" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/received_gift_cell_cancelPaybtn"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="-3dp"
                android:layout_weight="0"
                android:background="@drawable/ic_progress" />

        </LinearLayout>
    </LinearLayout>
    <!--가로줄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/addColor" />
</LinearLayout>
