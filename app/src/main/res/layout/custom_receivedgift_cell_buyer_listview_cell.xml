<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/received_gift_cell_buyer_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                app:civ_border_color="@color/boderColor"
                app:civ_border_width="0.5dp"
                />

        </LinearLayout>

        <TextView
            android:layout_weight="3"
            android:id="@+id/received_gift_cell_sendName"
            android:text="이름"
            android:textColor="@color/letterColor"
            android:textSize="13sp"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_weight="3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/letterColor"
            android:id="@+id/received_gift_cell_sendPrice"
            android:text="가격"
            android:gravity="center|right"
            android:paddingRight="13dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight="0"
            android:layout_gravity="center"
            android:id="@+id/received_gift_cell_sendPayBtn"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/ic_progress" />

    </LinearLayout>

</LinearLayout>
